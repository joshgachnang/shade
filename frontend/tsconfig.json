{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@store": ["./store/index"],
      "@store/*": ["./store/*"],
      "@utils": ["./utils/index"],
      "@utils/*": ["./utils/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["react-native", "@types/react", "@types/node"]
  },
  "extends": "expo/tsconfig.base",
  "exclude": [
    "node_modules",
    "openapi-config.ts",
    "scripts",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
