{
  "dependencies": {
    "@terreno/api": "latest",
    "dotenv": "^16.4.7",
    "luxon": "^3.7.2",
    "mongoose": "^8.18.1",
    "passport-local-mongoose": "^9.0.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/bun": "^1.2.4",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.4.2",
    "@types/passport-local-mongoose": "^6.1.5",
    "@types/pino-pretty": "^5.0.0",
    "typescript": "5.8.2"
